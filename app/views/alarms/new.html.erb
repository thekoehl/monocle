<h1>New Alarm</h1>
<% if @sensors.nil? %>
	<p>You need some sensors before you can create alarms!</p>
<% else %>
	<%= form_for @alarm, :url => {:action => 'create'} do |f| %>	
		<%= error_messages @alarm %>
		<ul class="form-horizontal">
			<li>
				<%= f.label :trigger_value %>
				<%= f.text_field :trigger_value %>
			</li>
			<li>
				<%= f.label :sensor_id %>
				<%= f.select :sensor_id, options_for_select(@sensors.map{|entry|[entry.name,entry.id]}) %>
			</li>
			<li>
				<%= f.label :trigger_type %>
				<%= f.select :trigger_type, options_for_select(@trigger_types) %>
			</li>
			<li class="button-container">
				<%= f.submit 'Create', :class => 'btn btn-success' %>
			</li>
		</ul>
	<% end %>
<% end %>