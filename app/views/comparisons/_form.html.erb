<%= error_messages @comparison %>
<ul class="form-horizontal">
	<li>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</li>
	<% @sensors.each do |sensor| %>
		<li class="form-checkbox-container">
			<%= check_box_tag "reporting_dashboard_sensor_ids_#{sensor.id}",
							  sensor.id,
							   @comparison.sensors.include?(sensor),
							  :name => "comparison[sensor_ids][]"
							   %>
			<%= label_tag "reporting_dashboard_sensor_ids_#{sensor.id}", sensor.name %>
		</li>
	<% end %>
	<li class="button-container">
		<%= f.submit 'Save', :class => 'btn btn-success' %>
	</li>
</ul>