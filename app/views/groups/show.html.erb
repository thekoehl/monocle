<h2><%= @group.name %></h2>
<ul class="container-vertical-listing">
  <% @group.sensors.each do |sensor| %>
    <li>
      <h3><%= link_to sensor.name, sensor %></h3>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="<%= sensor.last_data_point.value %>" aria-valuemin="<%= sensor.minimum %>" aria-valuemax="<%= sensor.maximum %>" style="width: <%= sensor.current_percentage %>%;">
          <%= number_to_human_size_agnostic(sensor.last_data_point.value) %><%= sensor.units %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
